/*default*/
table.table {
    @apply tracking-wider table-auto min-w-full;

    & thead {
        @apply border-b border-gray-200 bg-white;

        & th {
            @apply font-semibold;
        }
    }
}
/*end default*/

/*size*/
table.table-sm {
    @apply leading-4;

    & thead {
        @apply text-sm font-medium
    }
}

table.table-md {
    @apply leading-6;

    & thead {
        @apply text-base font-medium
    }
}

/*end size*/

/*color*/

table.table-blue {
    & thead {
        @apply bg-blue-500 text-white
    }
}

/*end color*/
